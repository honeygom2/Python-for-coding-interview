n, k = map(int, input().split())
result = 0
while n > 1:
    if n % k == 0:
        n = n / k
        result += 1
    else:
        n -= 1
        result += 1
print(result)

# more fast
n, k = map(int, input().split())
result = 0
while True:
    quotient = (n // k) * k
    result += (n - quotient)
    n = quotient
    if n < k:
        break
    else:
        result += 1
        n //= k
result += (n-1)
print(result)
